{
  "manifest_version": 3,
  "name": "JSON Viewer (V3)",
  "version": "3.0.0",
  "description": "The most beautiful and customizable JSON/JSONP highlighter that your eyes have ever seen.",
  "homepage_url": "https://github.com/mrfanii/JSON-Viewer-v3",
  "icons": {
    "128": "icons/128.png",
    "32": "icons/32.png",
    "16": "icons/16.png"
  },
  "background": {
    "service_worker": "assets/background.js"
  },
  "offline_enabled": true,
  "omnibox": {
    "keyword": "json-viewer"
  },
  "options_page": "pages/options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "assets/viewer.js"
      ],
      "run_at": "document_start"
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/viewer.css",
        "assets/viewer-alert.css",
        "pages/options.html",
        "pages/omnibox.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
